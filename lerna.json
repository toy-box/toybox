{
  "packages": ["packages/*"],
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "version": {
      "message": "%s"
    },
    "publish": {
      "registry": "https://registry.npmjs.org",
      "allowBranch": "master",
      "ignoreChanges": ["*.md"]
    }
  },
  "useWorkspaces": true,
  "version": "1.0.0"
}
