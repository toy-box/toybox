{
  "packages": ["packages/*"],
  "npmClient": "npm",
  "command": {
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"]
    },
    "publish": {
      "ignoreChanges": ["*.md"]
    },
    "version": {
      "forcePublish": true
    }
  },
  "useWorkspaces": true,
  "version": "1.0.3"
}
